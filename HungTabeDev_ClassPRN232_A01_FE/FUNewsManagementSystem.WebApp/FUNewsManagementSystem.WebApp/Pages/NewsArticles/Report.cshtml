@page
@model FUNewsManagementSystem.WebApp.Pages.NewsArticles.ReportModel
@{
    ViewData["Title"] = "Article Report";
}
<h2>Article Report</h2>
<form method="get" class="mb-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.StartDate" class="control-label"></label>
        <input asp-for="Input.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.EndDate" class="control-label"></label>
        <input asp-for="Input.EndDate" class="form-control" type="date" />
        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>
@if (Model.Articles != null)
{
    <h3>Results (@Model.Articles.Count articles)</h3>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Articles[0].NewsArticleId)</th>
                <th>@Html.DisplayNameFor(model => model.Articles[0].NewsTitle)</th>
                <th>@Html.DisplayNameFor(model => model.Articles[0].CreatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.Articles[0].CategoryId)</th>
                <th>@Html.DisplayNameFor(model => model.Articles[0].CreatedById)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Articles)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NewsArticleId)</td>
                    <td>@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedById)</td>
                </tr>
            }
        </tbody>
    </table>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
