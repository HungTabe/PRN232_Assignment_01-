@page
@model FUNewsManagementSystem.WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.AccountEmail" class="control-label"></label>
        <input asp-for="Input.AccountEmail" class="form-control" />
        <span asp-validation-for="Input.AccountEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.AccountPassword" class="control-label"></label>
        <input asp-for="Input.AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.AccountPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.AccountName" class="control-label"></label>
        <input asp-for="Input.AccountName" class="form-control" />
        <span asp-validation-for="Input.AccountName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.AccountRole" class="control-label"></label>
        <select asp-for="Input.AccountRole" class="form-control">
            <option value="0">Admin</option>
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
        <span asp-validation-for="Input.AccountRole" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-page="/Account/Login" class="btn btn-secondary">Back to Login</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}