@page "{id:int}"
@model FUNewsManagementSystem.WebApp.Pages.Tags.EditModel
@{
    ViewData["Title"] = "Edit Tag";
}
<h2>Edit Tag</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Tag.TagId" />
    <div class="form-group">
        <label asp-for="Tag.TagName" class="control-label"></label>
        <input asp-for="Tag.TagName" class="form-control" />
        <span asp-validation-for="Tag.TagName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag.Note" class="control-label"></label>
        <input asp-for="Tag.Note" class="form-control" />
        <span asp-validation-for="Tag.Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Tags/Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}