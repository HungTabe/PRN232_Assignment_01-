@page
@model FUNewsManagementSystem.WebApp.Pages.Tags.CreateModel
@{
    ViewData["Title"] = "Create Tag";
}
<h2>Create Tag</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Tag.TagId" class="control-label"></label>
        <input asp-for="Tag.TagId" class="form-control" />
        <span asp-validation-for="Tag.TagId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag.TagName" class="control-label"></label>
        <input asp-for="Tag.TagName" class="form-control" />
        <span asp-validation-for="Tag.TagName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag.Note" class="control-label"></label>
        <input asp-for="Tag.Note" class="form-control" />
        <span asp-validation-for="Tag.Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
