@page
@model FUNewsManagementSystem.WebApp.Pages.Tags.IndexModel
@{
    ViewData["Title"] = "Tags";
}
<h2>Tags</h2>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tags[0].TagId)</th>
            <th>@Html.DisplayNameFor(model => model.Tags[0].TagName)</th>
            <th>@Html.DisplayNameFor(model => model.Tags[0].Note)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tags)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TagId)</td>
                <td>@Html.DisplayFor(modelItem => item.TagName)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TagId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TagId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TagId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
