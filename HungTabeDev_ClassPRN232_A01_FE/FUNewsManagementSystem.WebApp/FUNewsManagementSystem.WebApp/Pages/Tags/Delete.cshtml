@page "{id:int}"
@model FUNewsManagementSystem.WebApp.Pages.Tags.DeleteModel
@{
    ViewData["Title"] = "Delete Tag";
}
<h2>Delete Tag</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tag.TagId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tag.TagId)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tag.TagName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tag.TagName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tag.Note)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tag.Note)</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Tag.TagId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Tags/Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>